{
  "type": "symfony-bundle",
  "name": "frd/entity-components-bundle",
  "keywords": ["symfony-ux", "live-component", "tags", "attachments", "entity-management"],
  "description": "Reusable Symfony Live Components for entity management (tags, attachments, comments)",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "symfony/framework-bundle": "^6.4|^7.0",
    "symfony/ux-live-component": "^2.21",
    "symfony/ux-twig-component": "^2.21",
    "symfony/form": "^6.4|^7.0",
    "symfony/security-bundle": "^6.4|^7.0",
    "doctrine/orm": "^2.0|^3.0",
    "frd/color-converter": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "symfony/phpunit-bridge": "^7.0",
    "symfony/browser-kit": "^7.0",
    "symfony/css-selector": "^7.0",
    "symfony/twig-bundle": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Frd\\EntityComponentsBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Frd\\EntityComponentsBundle\\Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "../frd-color-converter"
    }
  ]
}
